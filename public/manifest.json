{
    "manifest_version": 3,
    "name": "CosmDev addon for cosmos",
    "description": "Create your own addon for cosmos SDK blockchain",
    "version": "1.0",
    "content_security_policy": {
        "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self';"
    },  
    "action": {
        "default_popup": "index.html" 
    },
    "permissions": [
        "sidePanel",
        "storage"
    ], 
    "side_panel": {
        "default_path": "index.html",
        "default_title": "CosmDev"
    },
    "icons": {
        "16": "icons/16.png",
        "32": "icons/32.png",
        "48": "icons/48.png",
        "128": "icons/128.png"
    }
}
